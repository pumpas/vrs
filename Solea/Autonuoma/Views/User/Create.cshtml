@model Org.Ktu.Isk.P175B602.Autonuoma.Models.User

@{
	ViewData["title"] = "User creator";
}

<div class="main-content-header container-fluid d-flex d-row justify-content-between align-items-center">
	<pantrast class="title">@ViewData["title"]</pantrast>
</div>

<div class="container-fluid d-flex justify-content-center">
@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()
	
	@Html.ValidationSummary(true, "", new { @class = "text-danger" })
	@*
	@Html.HiddenFor(m => m.Id)
	//@Html.HiddenFor(m => m.Currency)
	@Html.HiddenFor(m => m.Currency, new { htmlAttributes = new { @Value=100 } })

*@
	<fieldset class="border rounded shadow p-2">
		<div class="form-group">

			<div>
			<atskls>@Html.LabelFor(m => m.Name, new { @class = "control-label" }) </atskls>
			@Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter username" } })
			@Html.ValidationMessage("name"@*m => m.Name, "", new { @class = "text-danger" }*@)
			</div>
			<div>
			<atskls>@Html.LabelFor(m => m.Email, new { @class = "control-label" }) </atskls>
			@Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control", @type = "email", @placeholder = "Enter email" } })
			<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
			@Html.ValidationMessage("email"@*m => m.Email, "", new { @class = "text-danger" }*@)
			</div>
			<div>
			<atskls>@Html.LabelFor(m => m.Password, new { @class = "control-label" }) </atskls>
			@Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control", @type = "password", @placeholder = "Password" } })
			@Html.ValidationMessage("password"@*m => m.Password, "", new { @class = "text-danger" }*@)
			</div>
			<div>
			<atskls>@Html.LabelFor(m => m.Vardas, new { @class = "control-label" }) </atskls>
			@Html.EditorFor(m => m.Vardas, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter your First name" } })
			@Html.ValidationMessage("firstname"@*m => m.FirstName, "", new { @class = "text-danger" }*@)
			</div>
			<div>
			<atskls>@Html.LabelFor(m => m.Pavarde, new { @class = "control-label" }) </atskls>
			@Html.EditorFor(m => m.Pavarde, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter your Last name" } })
			@Html.ValidationMessage("lastname"@*m => m.LastName, "", new { @class = "text-danger" }*@)
			</div>
			<div>
			<atskls>@Html.LabelFor(m => m.Age, new { @class = "control-label" }) </atskls>
			@Html.EditorFor(m => m.Age, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter your Last name" } })
			@Html.ValidationMessage("lastname"@*m => m.LastName, "", new { @class = "text-danger" }*@)
			</div>
			<div>
			<atskls>@Html.LabelFor(m => m.MobileNumber, new { @class = "control-label" }) </atskls>
			@Html.EditorFor(m => m.MobileNumber, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter your mobile number" } })
			@Html.ValidationMessage("mobilenumber"@*m => m.MobileNumber, "", new { @class = "text-danger" }*@)
			</div>
			<div id="role-field" class="form-group">
    @Html.LabelFor(m => m.Role, new { @class = "control-label" })
    <div>
 @Html.RadioButtonFor(m => m.Role, "Patient", new { @id = "patient-radio" }) <label for="patient-radio">Patient</label>
@Html.RadioButtonFor(m => m.Role, "Doctor", new { @id = "doctor-radio" }) <label for="doctor-radio">Doctor</label>
<div class="form-group" id="specialty-div" style="display: none;">
    @Html.LabelFor(m => m.Specialty, new { @class = "control-label" })
    <div>
        @Html.EditorFor(m => m.Specialty, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter your specialty", @id = "specialty-field" } })
    </div>
</div>

<style>
    #specialty-div[style*="display: none;"] {
        display: none;
    }
    #specialty-div[style*="display: block;"] {
        display: block;
    }
</style>

<script>
    var patientRadio = document.getElementById('patient-radio');
    var doctorRadio = document.getElementById('doctor-radio');
    var specialtyDiv = document.getElementById('specialty-div');

    function toggleSpecialtyField() {
        if (doctorRadio.checked) {
            specialtyDiv.style.display = 'block'; // Show the specialty field
        } else {
            specialtyDiv.style.display = 'none'; // Hide the specialty field
        }
    }

    patientRadio.addEventListener('change', toggleSpecialtyField);
    doctorRadio.addEventListener('change', toggleSpecialtyField);
</script>



			 
		</div>
	</fieldset>

	<div class="container-fluid d-flex d-row justify-content-end">
		<button class="btn btn-warning"><i class="fa-solid fa-floppy-disk"></i> Save</button>
	</div>
}
</div>

<div class="main-content-footer container-fluid d-flex d-row justify-content-between align-items-center">
	<span class="title"></span>
	<span class="actions">
		<a href="http://localhost:5000/Question" class="btn btn-success"><i class="fa-solid fa-angles-left"></i> Back to list</a>
	</span>
</div>